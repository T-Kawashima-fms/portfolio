<!DOCTYPE html>
<html lang="ja">
    <head>
      <title>
        <%= tagname %> - T.Kawashima's website
      </title>
      <%- include("./parts/head.ejs"); %>
    </head>

    <body>
      <%- include("./parts/header.ejs"); %>

      <main>
        <section class="articles">
          <div class="section-wrapper">
            <h2 class="sectiontitle-centering"><i class="fas fa-tag"></i><%= tagname %></h2>
            <div class="articles-cards">
            <% articles.map(article_data => { %>
              <% var data = article_data.article_detail; %>
              <div class="article-card">
                <a href="/articles/<%= article_data.genre %>/<%= data.shortname %>"></a>
                <img src="<%= data.topimage %>/raw/" />
                <div class="article-card-detail">
                  <h3><%= data.name %></h3>
                  <p><%= data.abstract %></p>
                  <p class="detail-date"><%= data.date %></p>
                </div>
              </div>
            <% }); %>
            </div>
            <div class="button-ani-rect">
              <a href="/">
                <span class="button-ani-rect-span">‚ÜêTop</span>
              </a>
            </div>
          </div>
        </section>
      </main>

      <%- include("./parts/footer.ejs"); %>

      <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
      </script>
      <script type="text/javascript">
        var tagname = "<%= tagname %>";
        $('title').html(tagname + " - T.Kawashima's website");
      </script>

    </body>

</html>
