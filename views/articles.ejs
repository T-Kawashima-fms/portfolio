<!DOCTYPE html>
<html lang="ja">
    <head>
      <title>
        <% if(typeName=="research" ){ %>
          Research 
        <% }else if(typeName=="work" ){ %>
          Work 
        <% }else if(typeName=="blog" ){ %>
          Blog 
        <% } %>
        - T.Kawashima's website
      </title>
      <link rel="stylesheet" href="/articles.css" />
      <%- include("./parts/head.ejs"); %>
    </head>

    <body>
      <%- include("./parts/header.ejs"); %>

      <main>
        <section class="articles">
          <div class="section-wrapper">
              <% if(typeName == "research"){ %>
                      <h2 class="sectiontitle-centering">Research</h2>
                      <p style="text-align: center; margin: 32px 0;">
                        これまで行ってきた研究です
                      </p>
              <% }else if(typeName == "work"){ %>
                      <h2 class="sectiontitle-centering">Work</h2>
                      <p style="text-align: center; margin: 32px 0;">
                        これまで制作してきたものです
                      </p>
              <% }else if(typeName == "blog"){ %>
                      <h2 class="sectiontitle-centering">Blog</h2>
                      <p style="text-align: center; margin: 32px 0;">
                        これまで活動などを書いていきます
                      </p>
              <% } %>
            </p>
            <div class="articles-cards">
            <% types.map(type => { %>
              <div class="article-card">
                <a href="/articles/<%= typeName %>/<%= type.shortname %>"></a>
                <img src="<%= type.topimage %>/raw/" />
                <div class="article-card-detail">
                  <h3><%= type.name %></h3>
                  <p><%= type.abstract %></p>
                  <p class="detail-date"><%= type.date %></p>
                </div>
              </div>
            <% }); %>
            </div>
            <div class="button-ani-rect">
              <a href="/">
                <span class="button-ani-rect-span">←Top</span>
              </a>
            </div>
          </div>
        </section>
      </main>

      <%- include("./parts/footer.ejs"); %>

      <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
      <script type="text/javascript">
        var categoryname = "";
        var typename = "<%= typeName %>";
        if(typename === "research"){
            categoryname = "Research";
        }else if(typename === "work"){
            categoryname = "Work";
        }else if(typename === "blog"){
            categoryname = "Blog";
        }
        $('title').html(categoryname + " - T.Kawashima's website");
      </script>

    </body>
</html>
